<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="startview-background" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scala.ch.makery.ninjagame.controllers.StartController">
   <VBox alignment="CENTER" prefHeight="323.0" prefWidth="500.0" spacing="20.0" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="100.0">
      <children>
         <Label styleClass="title-big" stylesheets="@styles.css" text="Ninja Game" />
          <Button fx:id="startButton" defaultButton="true" onAction="#handleStart" prefHeight="52.0" prefWidth="230.0" styleClass="button-start" stylesheets="@styles.css" text="Start Game" textAlignment="CENTER">
            <VBox.margin>
               <Insets />
            </VBox.margin>
         </Button>
         <Button fx:id="howToPlayButton" onAction="#handleHowToPlay" prefHeight="52.0" prefWidth="230.0" styleClass="button-start" stylesheets="@styles.css" text="How To Play?" textAlignment="CENTER" />
         <Button fx:id="quitButton" defaultButton="true" onAction="#handleQuit" prefHeight="52.0" prefWidth="230.0" styleClass="button-start" stylesheets="@styles.css" text="Quit Game" textAlignment="CENTER" />
      </children>
   </VBox>
   <Button fx:id="onMusicButton" alignment="CENTER" contentDisplay="CENTER" layoutX="18.0" layoutY="533.0" mnemonicParsing="false" onAction="#handleMusicOn" prefHeight="50.0" prefWidth="120.0" styleClass="button-game" stylesheets="@styles.css" text="Music On" visible="false" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="25.0" />
   <Button fx:id="offMusicButton" layoutX="50.0" layoutY="477.0" mnemonicParsing="false" onAction="#handleMusicOff" prefHeight="50.0" prefWidth="120.0" styleClass="button-game" stylesheets="@styles.css" text="Music Off" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="25.0" />
</AnchorPane>
