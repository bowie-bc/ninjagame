<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="768.0" prefWidth="1024.0" styleClass="startview-background" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ninjagamePackage.controllers.StartViewController">
   <VBox alignment="TOP_CENTER" prefHeight="768.0" prefWidth="1024.0" spacing="20.0" AnchorPane.topAnchor="0.0">
      <padding>
         <Insets top="120.0" />
      </padding>
      <Label alignment="CENTER" contentDisplay="CENTER" styleClass="label-title" text="Ninja Game">
         <padding>
            <Insets bottom="40.0" />
         </padding>
      </Label>
      <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleStart" prefHeight="60.0" prefWidth="250.0" styleClass="button-startview" text="Start Game" />
      <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleRules" prefHeight="60.0" prefWidth="250.0" styleClass="button-startview" text="Rules" />
      <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleQuit" prefHeight="60.0" prefWidth="250.0" styleClass="button-startview" text="Quit Game" />
   </VBox>
   <Button fx:id="musicOnOffButton" alignment="CENTER" contentDisplay="CENTER" layoutX="20.0" layoutY="20.0" mnemonicParsing="false" onAction="#handleMusicOnOff" prefHeight="50.0" prefWidth="140.0" styleClass="button-gameview" text="Music Off" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="25.0" />
</AnchorPane>
