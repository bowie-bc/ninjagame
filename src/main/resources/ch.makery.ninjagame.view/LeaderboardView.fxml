<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scala.ch.makery.ninjagame.controllers.LeaderboardController">
    <VBox alignment="CENTER" layoutX="150.0" layoutY="100.0" spacing="10.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0">
      <children>
           <Label styleClass="label-medium" stylesheets="@styles.css" text="Leaderboard" />
         <TableView prefHeight="280.0" prefWidth="600.0">
           <columns>
             <TableColumn prefWidth="75.0" text="Name" />
             <TableColumn prefWidth="75.0" text="Score" />
           </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>
           <Button onAction="#handleBack" text="Back" />
      </children>
    </VBox>
</AnchorPane>
