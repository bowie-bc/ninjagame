<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="startview-background" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scala.ch.makery.ninjagame.controllers.StartController">
   <VBox alignment="CENTER" prefHeight="323.0" prefWidth="500.0" spacing="20.0" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="100.0">
      <children>
         <Label styleClass="title-big" stylesheets="@styles.css" text="Fruit Ninja" />
         <TextField prefHeight="50.0" prefWidth="500.0" promptText="Enter Name" />
         <HBox alignment="CENTER" prefHeight="59.0" prefWidth="500.0" spacing="50.0">
            <children>
                <Button fx:id="startButton" defaultButton="true" onAction="#onStartButtonClick" prefHeight="50.0" prefWidth="184.0" text="Start Game" textAlignment="CENTER" />
               <Button fx:id="leaderboardButton" onAction="#onStartButtonClick" prefHeight="50.0" text="View Leaderboard" textAlignment="CENTER" />
            </children>
         </HBox>
      </children>
   </VBox>
</AnchorPane>
