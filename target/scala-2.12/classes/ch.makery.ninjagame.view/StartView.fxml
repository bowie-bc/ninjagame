<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="startview-background" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scala.ch.makery.ninjagame.controllers.StartController">
   <VBox alignment="CENTER" prefHeight="323.0" prefWidth="500.0" spacing="20.0" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="100.0">
      <children>
         <Label styleClass="title-big" stylesheets="@styles.css" text="Ninja Game" />
         <HBox alignment="CENTER" prefHeight="59.0" prefWidth="500.0" spacing="50.0">
            <children>
                <Button fx:id="startButton" defaultButton="true" onAction="#handleStart" prefHeight="50.0" prefWidth="200.0" styleClass="button-start" stylesheets="@styles.css" text="Start Game" textAlignment="CENTER" />
               <Button fx:id="helpButton" prefHeight="50.0" prefWidth="200.0" styleClass="button-start" stylesheets="@styles.css" text="Help" textAlignment="CENTER" />
            </children>
         </HBox>
         <Button fx:id="quitButton" defaultButton="true" onAction="#handleQuit" prefHeight="52.0" prefWidth="193.0" styleClass="button-start" stylesheets="@styles.css" text="Quit Game" textAlignment="CENTER" />
      </children>
   </VBox>
</AnchorPane>
